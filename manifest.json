{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "Quick Screenshot",
  "short_name": "Quick Screenshot",
  "description": "__MSG_description__",
  "offline_enabled": true,
  "default_locale": "en",
  "icons": {
    "16": "icon/quick-screenshot-16.png",
    "48": "icon/quick-screenshot-48.png",
    "128": "icon/quick-screenshot-128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/event.js"]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "__MSG_title__",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "icon/quick-screenshot-19.png",
      "38": "icon/quick-screenshot-38.png"
    }
  },
  "permissions": ["activeTab", "desktopCapture"]
}
